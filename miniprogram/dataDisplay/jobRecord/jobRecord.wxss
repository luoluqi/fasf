.job-item{
  width: 710rpx;
  border-radius: 10rpx;
  margin: 20rpx auto;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.job-title{
  margin: 0 0 20rpx 0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.salary{
  padding: 0 0 20rpx 0;
  color: var(--td-brand-color);
  display: flex;
  align-items: center;
}
.salary-type{
  font-size: 28rpx;
  color: #484d52;
  border-radius: 4rpx;
  /* border: 1rpx solid var(--td-brand-color); */
  background: #e3e5f1;
  display: inline-block;
  vertical-align: middle;
  padding: 4rpx 8rpx;
  margin: 0 10rpx 20rpx 0;
  
}
.address{
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}


.oper-con{
    padding: 20rpx 0 0 0;
    display: flex;
    justify-content: space-between;
}
.status-up{
    background: var(--td-brand-color);
    color: #fff;
    padding: 4rpx 10rpx;
    

}
.status-down{
    background: var(--color-2);
    color: #fff;
    padding: 4rpx 10rpx;
    border: 1rpx solid var(--color-2);
}
.oper-btn-list{
    display: flex;
    justify-content: space-between;
    width: 60%;
}
.up-btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--td-brand-color);
}
.down-btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-2);
}
.delete-btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-1);
}