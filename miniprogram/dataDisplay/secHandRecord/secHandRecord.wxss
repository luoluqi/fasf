
.house-item{
  background: #fff;
  padding:30rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.img{
  width: 250rpx;
  height: 250rpx;
  border-radius: 20rpx;
}
.title{
  width: 400rpx;
  margin: 0 0 20rpx 0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.desc{
  margin: 0 0 20rpx 0;
  font-size: 24rpx;
  color: #666;
}
.tab-list{
  margin: 0 0 10rpx 0;
}
.tab{
  font-size: 24rpx;
  padding: 2rpx 4rpx;
  color: var(--color-2);
  border: 1rpx solid var(--color-2);
 
  display: inline-block;
  vertical-align: middle;
  margin: 0 10rpx 10rpx 0;
  border-radius: 6rpx;
}
.price{
  color: var(--td-brand-color);
  margin: 0 0 20rpx 0;
}
.address{
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  width: 400rpx;
}

.oper-con{
    padding: 20rpx 0 0 0;
    display: flex;
    justify-content: space-between;
}
.status-up{
    background: var(--td-brand-color);
    color: #fff;
    padding: 4rpx 10rpx;
    

}
.status-down{
    background: var(--color-2);
    color: #fff;
    padding: 4rpx 10rpx;
    border: 1rpx solid var(--color-2);
}
.oper-btn-list{
    display: flex;
    justify-content: space-between;
    width: 60%;
}
.up-btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--td-brand-color);
}
.down-btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-2);
}
.delete-btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-1);
}