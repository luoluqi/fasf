<view class="image-box">
  <view wx:for="{{imgList}}" class="img-con">
   
    <t-icon catchtap="delImg" data-index="{{index}}" class="del-img" name="close-circle" size="50rpx" />
    <image bindtap="previewImage" data-url="{{item}}" class="img-item" src="{{item}}" mode="aspectFill"></image>
  </view>
  <view bindtap="chooseImage" class="add-img-btn">
    <view>
      <t-icon name="image-add" size="100rpx" />
      <view style="font-size: 28rpx;padding: 10rpx;">添加图片</view>
    </view>
  </view>
</view>